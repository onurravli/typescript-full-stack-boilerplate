{
  "name": "typescript-full-stack-boilerplate",
  "version": "1.0.0",
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "concurrently": "^8.2.2"
  },
  "scripts": {
    "format": "biome format",
    "lint": "biome lint",
    "build:backend": "cd packages/backend && npm run build",
    "build:backend:dev": "cd packages/backend && npm run build:dev",
    "start:backend": "cd packages/backend && npm start",
    "start:backend:dev": "cd packages/backend && npm run start:dev",
    "dev:backend": "concurrently \"npm run build:backend:dev\" \"npm run start:backend:dev\"",
    "build:frontend": "cd packages/frontend && npm run build",
    "build:frontend:dev": "cd packages/frontend && npm run build:dev",
    "start:frontend": "cd packages/frontend && npm start",
    "start:frontend:dev": "cd packages/frontend && npm run start:dev",
    "dev:frontend": "concurrently \"npm run build:frontend:dev\" \"npm run start:frontend:dev\"",
    "build": "concurrently \"npm run build:backend\" \"npm run build:frontend\"",
    "build:dev": "concurrently \"npm run build:backend:dev\" \"npm run build:frontend:dev\"",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\""
  },
  "dependencies": {
    "guvercin": "^1.2.2"
  }
}
